<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <include layout="@layout/header_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_22"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/dp_14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款金额"
            android:textColor="@color/true_black"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/tv_tuikuanjine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@color/white"
            android:textColor="@color/gray"
            android:textColorHint="@color/grey_a5a5a5"
            android:textSize="@dimen/dp_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_size_1"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/dp_14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款密码"
            android:textColor="@color/true_black"
            android:textSize="@dimen/dp_14" />

        <EditText
            android:id="@+id/et_tuikuanmima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请输入退款密码"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/true_black"
            android:textColorHint="@color/grey_a5a5a5"
            android:textSize="@dimen/dp_14" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_size_20"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/finishbutton_big">

        <TextView
            style="@style/text_style18"
            android:layout_centerInParent="true"
            android:padding="@dimen/text_size_10"
            android:text="下一步"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>