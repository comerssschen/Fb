<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/header"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_14">

        <LinearLayout
            android:id="@+id/ll_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/fhtb" />

            <TextView
                style="@style/text_style18"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:text="返回"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/zd_segment_left_selector"
                android:textColor="@drawable/zd_segment_text_selector"
                android:clickable="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="趋势分析"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-2dp"
                android:background="@drawable/zd_segment_right_selector"
                android:textColor="@drawable/zd_segment_text_selector"
                android:clickable="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="收款构成"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

    </RelativeLayout>


    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>