<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">


    <include
        android:id="@+id/header_view"
        layout="@layout/header_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_view"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">



            <RelativeLayout
                android:id="@+id/rl_personal"
                style="@style/linearlayout_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="@dimen/dp_4"
                    style="@style/text_style14"
                    android:layout_centerVertical="true"
                    android:text="头像"
                    android:textColor="#444444" />


                <ImageView
                    android:id="@+id/iv_personal"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/login_avatar" />

            </RelativeLayout>

            <RelativeLayout
                style="@style/linearlayout_style"
                android:layout_marginTop="@dimen/text_size_10"
                android:background="@color/white"
                android:padding="@dimen/dp_14">

                <TextView
                    style="@style/text_style15"
                    android:text="用户名" />

                <TextView
                    android:id="@+id/username"
                    style="@style/layout_style"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/linearlayout_style"
                android:layout_marginTop="@dimen/text_size_1"
                android:background="@color/white"
                android:padding="@dimen/dp_14">

                <TextView
                    style="@style/text_style15"
                    android:text="公司名称" />

                <TextView
                    android:id="@+id/tv_conpaney_name"
                    style="@style/layout_style"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_phone"
                style="@style/linearlayout_style"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/text_size_10"
                android:background="@color/white"
                android:padding="@dimen/dp_14">

                <TextView
                    style="@style/text_style15"
                    android:text="手机" />


                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/layout_style"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_qq"
                style="@style/linearlayout_style"
                android:layout_marginTop="@dimen/text_size_1"
                android:background="@color/white"
                android:padding="@dimen/dp_14">

                <TextView
                    style="@style/text_style15"
                    android:text="QQ" />


                <EditText
                    android:id="@+id/et_qqnumber"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/white"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textColor="@color/true_black" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_mail"
                style="@style/linearlayout_style"
                android:layout_marginTop="@dimen/text_size_1"
                android:background="@color/white"
                android:padding="@dimen/dp_14">

                <TextView
                    style="@style/text_style15"
                    android:text="邮箱" />

                <EditText
                    android:id="@+id/et_mail"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/white"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textColor="@color/true_black" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/linearlayout_style"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:padding="@dimen/dp_14">

                <TextView
                    style="@style/text_style15"
                    android:text="所属代理商" />


                <TextView
                    android:id="@+id/tv_agentname"
                    style="@style/layout_style"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/linearlayout_style"
                android:layout_marginTop="@dimen/text_size_1"
                android:background="@color/white"
                android:padding="@dimen/dp_14">

                <TextView
                    style="@style/text_style15"
                    android:text="创建时间" />


                <TextView
                    android:id="@+id/tv_addtime"
                    style="@style/layout_style"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/linearlayout_style"
                android:layout_marginTop="@dimen/text_size_1"
                android:background="@color/white"
                android:padding="@dimen/dp_14">

                <TextView
                    style="@style/text_style15"
                    android:text="到期时间" />

                <TextView
                    android:id="@+id/tv_endtime"
                    style="@style/layout_style"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/text_size_20"
                android:background="@drawable/finishbutton_big">

                <TextView
                    style="@style/text_style18"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/text_size_10"
                    android:text="保存更改"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_72"
                android:background="#F2F7F9" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>